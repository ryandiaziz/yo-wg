    <children>
        <TextField fx:id="nameField" promptText="Enter name" />
        <TextField fx:id="noteField" promptText="Enter note" />
      <TextArea fx:id="contentField" prefHeight="200.0" prefWidth="200.0" />
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
         <children>
              <Button fx:id="saveButton" contentDisplay="CENTER" text="Save" />
            <Button fx:id="cancelButton" contentDisplay="CENTER" text="Cancel" />
         </children>
      </HBox>
    </children>
</VBox>
