               </children>
            </HBox>
            <ScrollPane prefHeight="443.0" prefWidth="461.0">
               <content>
                  <VBox fx:id="listResourceContainer" alignment="TOP_CENTER" prefHeight="398.0" prefWidth="459.0" spacing="10.0">
